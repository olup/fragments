{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": [
    "src"
  ]
}
